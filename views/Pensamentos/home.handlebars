<div class="home-header">

    <h1>Todos os Pensamentos</h1>

    <form action="/" method="GET">
        <input type="text" name="search" placeholder="EstÃ¡ buscando por algo?">
        <input type="submit" class="btn" value="buscar">
    </form>

    <div class="order-container">
        <span>Ordenar por: </span>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit">i.bi.bi-arrow-up</button>
        </form>

        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit">i.bi.bi-arrow-down</button>
        </form>

        <a href="/">Limpar</a>
        
    </div>
        
</div>
<div class="pensamentos-container">
    {{#each pensamnetos}}
        <figure>
            <blockquote>
                "{{this.title}}"
            </blockquote>
            <figcaption>por <span>{{this.User.name}}</span> </figcaption>
        </figure>
    {{/each}}
</div>